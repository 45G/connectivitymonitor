<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a45g.athena.connectivitymonitor.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <CheckBox
            android:text="Enable MPTCP [requires ROOT]"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:id="@+id/enableMPTCP"
            />

        <CheckBox
            android:text="Run MPTCP configuration scripts [requires ROOT]"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:id="@+id/run_shell_scripts"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_apn" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="land"
            android:ems="10"
            android:id="@+id/apn_to_watch" />

        <Button
            android:text="Save settings"
            android:layout_width="160dp"
            android:layout_height="59dp"
            android:id="@+id/save"
            android:layout_weight="0.04" />

        <Button
            android:text="Send database"
            android:layout_width="160dp"
            android:layout_height="59dp"
            android:id="@+id/send" />
    </LinearLayout>


</FrameLayout>
