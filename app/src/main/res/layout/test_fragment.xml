<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/testScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a45g.athena.connectivitymonitor.TestFragment" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/testLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.a45g.athena.connectivitymonitor.TestFragment"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Choose executable/script type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chooseType"
                android:layout_weight="0.50"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <Button
                android:text="Choose executable/script example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chooseScript"
                android:layout_weight="0.50"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />
        </LinearLayout>

        <TextView
            android:text="Python script:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scriptText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="/sdcard/url.py"
            android:ems="10"
            android:id="@+id/scriptName" />

        <TextView
            android:text="Option 1:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/option1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="-l 2000000"
            android:ems="10"
            android:id="@+id/option1value" />

        <TextView
            android:text="Option 2:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/option2" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="-c 10"
            android:ems="10"
            android:id="@+id/option2value" />

        <TextView
            android:text="Number of Times:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timesText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="1"
            android:ems="10"
            android:id="@+id/timesValue" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="Start Test"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:id="@+id/start" />

            <Button
                android:text="Stop Test"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:id="@+id/stop" />

            <Button
                android:text="Clear"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:id="@+id/clear" />
        </LinearLayout>

        <TextView
            android:text="Output:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/resultText" />

        <TextView
            android:id="@+id/testResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:longClickable="true"
            android:textIsSelectable="true"
            android:textSize="8sp" />


    </LinearLayout>

</ScrollView>
