<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/testScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a45g.athena.connectivitymonitor.TestFragment" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/testLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.a45g.athena.connectivitymonitor.TestFragment"
        android:weightSum="1">


        <TextView
            android:text="Script:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scriptText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="/sdcard/tcp_ping.py"
            android:ems="10"
            android:id="@+id/scriptName" />

        <TextView
            android:text="Target IP/Domain:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/domainText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="jepi.cs.pub.ro"
            android:ems="10"
            android:id="@+id/domainName" />

        <TextView
            android:text="Target Port:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/portText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="1889"
            android:ems="10"
            android:id="@+id/portValue" />

        <TextView
            android:text="Number of Times:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timesText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="10"
            android:ems="10"
            android:id="@+id/timesValue" />

        <Button
            android:text="Start Test"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/start"
            android:layout_weight="0.02" />

        <TextView
            android:text="Result:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/resultText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/testResult" />


    </LinearLayout>

</ScrollView>
